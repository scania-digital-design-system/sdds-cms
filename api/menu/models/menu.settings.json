{
  "connection": "default",
  "collectionName": "menus",
  "info": {
    "name": "menu"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string",
      "required": true
    },
    "submenus": {
      "collection": "menu",
      "via": "parent"
    },
    "parent": {
      "model": "menu",
      "via": "submenus"
    },
    "contents": {
      "type": "component",
      "repeatable": true,
      "component": "page-plugin.content",
      "required": true
    },
    "index": {
      "type": "integer"
    }
  }
}

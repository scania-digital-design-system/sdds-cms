{
  "connection": "default",
  "collectionName": "menus",
  "info": {
    "name": "menu"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string",
      "required": true
    },
    "submenus": {
      "collection": "menu",
      "via": "parent"
    },
    "parent": {
      "model": "menu",
      "via": "submenus"
    },
    "index": {
      "type": "integer"
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "showTabs": {
      "type": "boolean",
      "default": false
    },
    "pageStructure": {
      "type": "dynamiczone",
      "components": [
        "page-plugin.tab",
        "page-plugin.article"
      ]
    }
  }
}
